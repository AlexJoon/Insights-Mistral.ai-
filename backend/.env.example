PINECONE_METRIC=cosine
PINECONE_CLOUD=aws
PINECONE_REGION=us-east-1

# RAG Configuration
ENABLE_RAG=true
RAG_CHUNK_SIZE=500
RAG_CHUNK_OVERLAP=50
RAG_CHUNKING_STRATEGY=fixed_size
RAG_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.7
